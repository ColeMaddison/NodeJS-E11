<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Node Blog</title>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
</head>
    <body>
    {% if not user %}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4 align-middle">
                    <div class="login-page">
                        <div class="formAuth">
                            <form class="register" method="post" style="display: none;">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="nickname" placeholder="nickname">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" placeholder="email">
                                </div>
                                <div class="form-group">
                                    <input  type="password" class="form-control" name="password" placeholder="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <p class="message">Already registered? <a href="#">Sign In</a></p>
                            </form>

                            <form class="login" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="email" placeholder="email">
                                </div>
                                <div class="form-group">
                                    <input  type="password" class="form-control" name="password" placeholder="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <p class="message">Not registered? <a href="#">Create an account</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
    {% else %}

        <p class="userNname">{{ user }}</p>

        <form class="formFile" enctype="multipart/form-data" action="/api/files" method="POST">
            <input type="file" name="avatar">
            <input type="submit" value="Submit">
        </form>
        <a href="/api/posts">To posts</a>

        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <form class="saveMessage" enctype="multipart/form-data" action="">
                        <div class="form-group">
                            <label for="postTextArea">Example textarea</label>
                            <textarea class="form-control" id="postTextArea" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
        

    {% endif %}
        <script src="/assets/js/unauth.js"></script>
    </body>
</html>
