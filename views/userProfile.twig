<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Posts</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    {# nav #}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">BLOG</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/api/posts">Posts <span class="sr-only">(current)</span></a>
            </li>
        </div>

        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/profile"><strong>{{userData.nickname}}</strong></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/api/auth/logout">Log out</a>
            </li>
        </div>
    </nav>

    {# main #}
    {# user data #}
    {# <div class="container">
        <p>{{userData}}</p>
    </div> #}

    <br>
    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-sm-3"><!--left col-->

                <div class="text-center form-group">
                    <h1>{{userData.nickname}}</h1>
                    {% if userData.avatar %}
                        <img src={{userData.avatar}} class="avatar rounded-circle img-thumbnail" alt="avatar">
                    {% else %}
                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar rounded-circle img-thumbnail" alt="avatar">
                    {% endif %}
                    <h6>Upload a different photo...</h6>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input user-logo" name="logo" id="customFile">
                        <label class="custom-file-label text-left" for="customFile">Choose file</label>
                    </div>
                </div>
                <hr>
                <br>

                <div class="card">
                    <div class="card-header">
                        Posts
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><span><strong>Shares</strong></span> 125</li>
                        <li class="list-group-item"><span><strong>Likes</strong></span> 13</li>
                        <li class="list-group-item"><span><strong>Posts</strong></span> 37</li>
                        <li class="list-group-item"><span><strong>Followers</strong></span> 78</li>
                    </ul>
                </div>
                
                
            </div><!--/col-3-->
            <div class="col-sm-9">
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <form class="form" action="##" method="post" id="registrationForm" encType="multipart/form-data">
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="email"><h4>Email</h4></label>
                                    <input type="email" class="form-control userEmail" name="email" id="email" value="{{userData.email}}" placeholder="you@email.com" title="enter your email.">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6 text-center">
                                    <br>
                                    <button class="btn btn-lg btn-success updateUserProfile" type="submit"><i class="fa fa-check-circle"></i> Save</button>
                                </div>
                            </div>
                        </form>
                    </div><!--/tab-pane-->
                </div><!--/tab-content-->
            </div><!--/col-9-->
        </div><!--/row-->
        <br>
    </div><!--/container-->              

    <script>
        var readURL = function(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.avatar').attr('src', e.target.result);
                }
        
                reader.readAsDataURL(input.files[0]);
            }
        }

        $(".user-logo").on('change', function(){
            readURL(this);
        });
    </script>

    <script src="/static/js/userProfile.js"></script>

</body>
</html>