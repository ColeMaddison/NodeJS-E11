<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Posts</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
</head>
<body>
    {# nav #}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">BLOG</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/api/posts">Posts <span class="sr-only">(current)</span></a>
            </li>
        </div>
    </nav>

    {# main #}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">

            {% for item in docs %}

                <div class="panel">
                    <div class="panel-heading">
                        <div class="text-center">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h3>{{item.username}}</h3>
                                </div>
                                <div class="offset-sm-5">
                                    <h6 class="pull-right">
                                        <small><em>{{item.createdAt.toDateString()}}<br>{{item.createdAt.toTimeString().substr(0,9)}}</em></small>
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="panel-body">
                        <div class="row">
                            <div class="offset-sm-5">
                                <a href="/api/posts/{{item._id.toString()}}"><h5>{{item.title}}</h5></a>
                            </div>
                            <div class="col-sm-12">
                                {% if item.post.length > 300 %}
                                    {{item.post.substr(0, 301)}} ...
                                {% else %}
                                    {{item.post}}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <hr>
                </div>
            {% endfor %}


            </div>
        </div>
    </div>
    
</body>
</html>